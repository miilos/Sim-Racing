doctype html
html(lang="en")

    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="./css/search_style.css")
        <script src="https://kit.fontawesome.com/dfb5f0fb11.js" crossorigin="anonymous"></script>
        title #{title} | Sim Racing
    
    body
        // SEARCH ELEMENTS

        .search_container
            .back_button
                a(href='/'): i(class='fas fa-arrow-left')

            .search_bar_container
                input.search_bar(placeholder='Search...') 
                button.search_btn
                    i(class='fas fa-search seatch_icon')

            .sort_container
                select(name='sort' id='sort_select')
                    option(value='n/a') Don't sort
                    option(value="name") Name 
                    option(value="points") Points 
                    option(value="distance") Distance 
                select(name='display' id='display_select')
                    option(value='n/a') Show all
                    option(value='sports_car') Sports cars
                    option(value='terrain_car') Terrain cars
                    option(value='cross_bike') Cross bikes
                    option(value='sports_bike') Sport bikes
                    option(value='truck') Trucks

        hr.line(width='50%' height='1px' color='#F2B138')

        // SEARCH RESULTS

        .content_container 
            //CARDS
            .cards_container

        //- .modal
            .top_row
                i(class='fas fa-times close')
                h1.vehicle_name Name 
            .mid_row 
                .icon_outline
                    i(class='fas fa-car-side icon')
            .bottom_row 
                table.info 
                    tr 
                        td Type:
                        td type
                    tr 
                        td Malf. chance:
                        td 3%
                    tr 
                        td Max speed:
                        td 140 km/h
                    tr 
                        td Distance: 
                        td 100 km
                    tr 
                        td Points: 
                        td 150 pts

    script(src='./util/search.js') 